!!! 5
%html{:lang => "en"}
  %head
    %title Boilerplate
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    
%body

  .container
    %header
      %nav.navbar.navbar-default
        %div
          .navbar-header
            = link_to "FreshList", root_url, :title => "Dashboard", :class => "navbar-brand"
          .navbar-collapse
            %ul.nav.navbar-nav.navbar-right
              %li.dropdown
                = link_to "#", :title => "Account", :class => "dropdown-toggle", :'data-toggle' => "dropdown" do
                  Account
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Sign Out", destroy_user_session_path, :title => "Sign Out", :method => 'delete'
    
      = render :partial => 'layouts/flashes'
    
    = render :partial => 'layouts/breadcrumb'

    = yield
    
    %footer
      
      = link_to "about", "/about", :title => "about"